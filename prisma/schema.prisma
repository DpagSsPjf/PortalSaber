generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  senha     String
  role      Role       @default(SUS)
  feedbacks Feedback[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Feedback {
  id           String   @id @default(uuid())
  tutorialId   String
  userId       String?  @map("user_id")
  sessionId    String?  @map("session_id")
  interaction  String
  feedbackType String?
  comment      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@index([tutorialId])
  @@index([userId])
  @@index([sessionId])
}

model TutorialStats {
  tutorialId  String   @id
  likes       Int      @default(0)
  dislikes    Int      @default(0)
  lastUpdated DateTime @default(now())
}

enum Role {
  SAUDE
  SUS
  ADMIN
}
